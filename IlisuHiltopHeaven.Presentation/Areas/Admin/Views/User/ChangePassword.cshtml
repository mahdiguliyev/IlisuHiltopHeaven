@model IlisuHiltopHeaven.Entities.Dtos.UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Şifrəni Dəyiş";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-key"></span> Şifrəni Dəyiş</h4>
            </div>
            <div class="card-body">
                <form asp-area="admin" asp-controller="user" asp-action="changepassword" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-group">
                        <label asp-for="CurrentPassword"></label>
                        <input type="password" class="form-control" asp-for="CurrentPassword" placeholder="Mövcud şifrənizi daxil edin" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input type="password" class="form-control" asp-for="NewPassword" placeholder="Yeni şifrəni daxil edin" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RepeatPassword"></label>
                        <input type="password" class="form-control" asp-for="RepeatPassword" placeholder="Yeni şifrəni təstiqləyin" />
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"><span class="fas fa-save"></span> Yadda saxla</button>
                        <a asp-area="admin" asp-controller="home" asp-action="index" class="btn btn-danger btn-block"><span class="fas fa-times"></span> İmtina</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>