                            <input class="form-control" asp-for="TitleEn3" />
                            <span class="text-danger" asp-validation-for="TitleEn3"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="TitleRu3"></label>
                            <input class="form-control" asp-for="TitleRu3" />
                            <span class="text-danger" asp-validation-for="TitleRu3"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="SubtitleAz3"></label>
                            <textarea class="form-control" asp-for="SubtitleAz3"></textarea>
                            <span class="text-danger" asp-validation-for="SubtitleAz3"></span>
                        </div>
                        <div class="form-group col-md-4">
