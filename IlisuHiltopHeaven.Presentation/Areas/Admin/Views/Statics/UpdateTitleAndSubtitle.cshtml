@model IlisuHiltopHeaven.Presentation.Areas.Admin.Models.TitleAndSubtitleUpdateViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "İkinci Bölmə, Xidmətlər, Ekoturizm";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
