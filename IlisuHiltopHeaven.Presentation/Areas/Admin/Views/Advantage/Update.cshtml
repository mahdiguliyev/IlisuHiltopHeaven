@model IlisuHiltopHeaven.Presentation.Areas.Admin.Models.AdvantageUpdateViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Avantaj Məlumatlarını Yenilə";
}


<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Avantaj məlumatlarını yenilə </h4>
            </div>
            <div class="card-body">
                <form asp-area="admin" asp-controller="advantage" asp-action="update" method="post" id="form-generalsettings-update">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" type="text" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="LanguageId" for="languageList"></label>
                            <select asp-for="LanguageId" asp-items="@(new SelectList(Model.Languages, "Id", "LanguageCode"))" id="languageList" class="form-control">
                                <option></option>
                            </select>
                            <span asp-validation-for="LanguageId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Yadda saxla</button>
                            <a class="btn btn-info" asp-area="admin" asp-controller="advantage" asp-action="index"><span class="fas fa-arrow-left"></span> Geri</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>