@model IList<IlisuHiltopHeaven.Entities.Concrete.HomePageInformation>
@{
    Layout = "_Layout";
    ViewBag.Title = "Ana Səhifə Kontentləri";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="admin" asp-controller="home" asp-action="index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="admin" asp-controller="homepageinf" asp-action="index">Ana Səhifə Kontentləri</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Ana Səhifə Məlumatları
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="homepageinfTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlıq</th>
                        <th>Şəkil</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Başlıq</th>
                        <th>Şəkil</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var homepageinf in Model)
                    {
                    <tr name="@homepageinf.Id">
                        <td>@homepageinf.Id</td>
                        <td>@homepageinf.Title</td>
                        <td><img src="~/img/@homepageinf.Image" class="my-image-table" /></td>
                        <td>
                            <a asp-area="admin" asp-controller="homepageinf" asp-action="update" asp-route-id="@homepageinf.LanguageGroupId" class="btn btn-primary btn-sm btn-update" data-id="@homepageinf.LanguageGroupId"><span class="fas fa-edit"></span></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            const dataTable = $('#homepageinfTable').DataTable({});
        });
    </script>
}
