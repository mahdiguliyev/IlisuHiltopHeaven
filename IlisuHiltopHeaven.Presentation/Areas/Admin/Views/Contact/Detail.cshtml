@model IlisuHiltopHeaven.Entities.Concrete.Contact
@{
    Layout = "_Layout";
    ViewBag.Title = "Müraciət Məlumatları";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Müraciət Məlumatları </h4>
            </div>
            <div class="card-body">
                <input asp-for="Id" type="hidden" />
                <div class="form-row">
                    @*<div class="form-group col-md-12">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" type="text" id="seoWriter" class="form-control" disabled />
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Message"></label>
                        <textarea asp-for="Message" class="form-control" disabled></textarea>
                    </div>*@
                    <div class="form-group col-md-12">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" type="tel" id="seoWriter" class="form-control" disabled />
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="CreatedDate">Daxil olma tarixi</label>
                        <input asp-for="CreatedDate" type="tel" id="seoWriter" class="form-control" disabled />
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="IsAnswerd">Status:</label>
                        @if (Model.IsAnswerd == true)
                        {
                            <input asp-for="IsAnswerd" type="submit" id="seoWriter" class="btn btn-success" disabled />
                        }
                        else
                        {
                            <input asp-for="IsAnswerd" type="submit" id="seoWriter" class="btn btn-danger" disabled />
                        }
                    </div>
                    <div class="form-group col-md-12">
                        <a class="btn btn-info" asp-area="admin" asp-controller="contact" asp-action="index"><span class="fas fa-arrow-left"></span> Geri</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
