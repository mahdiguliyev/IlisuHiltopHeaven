@model IlisuHiltopHeaven.Presentation.Areas.Admin.Models.SocialMediaUpdateViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Sosyal Medya";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-1 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> Sosyal Medya</h4>
            </div>
            <div class="card-body">
                <form asp-controller="statics" asp-action="updatesocialmedia" method="post" id="form-socialmedia-update">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input type="tel" class="form-control" asp-for="PhoneNumber" />
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="WhatsappUrl"></label>
                            <input type="url" class="form-control" asp-for="WhatsappUrl" />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="InstagramUrl"></label>
                            <input type="url" class="form-control" asp-for="InstagramUrl" />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="FacebookUrl"></label>
                            <input type="url" class="form-control" asp-for="FacebookUrl" />
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="YoutubeUrl"></label>
                            <input type="url" class="form-control" asp-for="YoutubeUrl" />
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Yadda saxla</button>
                            <a class="btn btn-info" asp-area="admin" asp-controller="home" asp-action="index"><span class="fas fa-arrow-left"></span> Geri</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>