@model IlisuHiltopHeaven.Presentation.Areas.Admin.Models.ProjectViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Proyekt";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="admin" asp-controller="home" asp-action="index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="admin" asp-controller="statics" asp-action="projectsettings">Proyekt</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Proyekt
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="projectTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Plan</th>
                        <th>Dil</th>
                        <th>Şəkil 1</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Plan</th>
                        <th>Dil</th>
                        <th>Şəkil 1</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var project in Model.Projects)
                    {
                        <tr name="@project.Id">
                            <td>@project.Id</td>
                            <td>@project.MainPlan</td>
                            <td>@project.Language.LanguageCode</td>
                            <td><img src="~/img/@project.ImageOne" class="my-image-table" /></td>
                            <td>
                                <a asp-area="admin" asp-controller="statics" asp-action="updateprojectsetting" asp-route-projectId="@project.Id" class="btn btn-primary btn-sm btn-update" data-id="@project.Id"><span class="fas fa-edit"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            const dataTable = $('#projectTable').DataTable({});
        });
    </script>
}
